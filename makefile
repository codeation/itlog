format:
	clang-format -i gtk/macro.h
	clang-format -i gtk/signalconnect.c
	clang-format -i gtk/signalconnect.h
	clang-format -i gtk/watchio.c
	clang-format -i gtk/watchio.h

format4:
	clang-format -i gtk4/macro.h
	clang-format -i gtk4/signalconnect.c
	clang-format -i gtk4/signalconnect.h
	clang-format -i gtk4/watchio.c
	clang-format -i gtk4/watchio.h
